{
    "env": {
        "es6": true,
        "browser": true,
        "commonjs": true,
        "jquery": true,
	    "node": true
        },
    "extends": [
        "eslint:recommended",
        "plugin:vue/recommended"
    ],
    "rules": {
        "indent": ["error", 4],
        "vue/script-indent": ["error", 4, { "baseIndent": 1 }],
        "vue/html-indent": ["error", 4, { "baseIndent": 1 }],
        "no-console": 0,
        "allowImportExportEverywhere":true
    },
    "settings": {
        "html/indent": "+4"
    },
    "parserOptions":{
        "sourceType":"module",
        "ecmaVersion": 2017
    },
    "overrides": [
        {
            "files": ["*.vue"],
            "rules": {
                "indent": "off"
            }
        },
        {
            "files": ["*.php"],
            "rules": {
                "no-inner-declarations": "off",
                "no-undef": "off",
                "no-unused-vars": "off"
            }
        }
    ],
    "plugins" : [
        "html"
    ]
}